---
to: <%=locals.target || '.'%>/__tests__/<%=h.actionName(name)%>.spec.js
---
'use strict';

const Assert = require('assert');
const { createContext } = require('@ebay/oja-action');

describe(__filename, () => {
    <%= h.testCaseName(locals.mocha) %>('action <%=name%> should be called', async () => {
        const context = await createContext();
        Assert.equal(`<%=name%> is called`,
            await context.action('<%=name%>'));
    });
    
    <%= h.testCaseName(locals.mocha) %>('action <%=name%> should fail', async () => {
        const context = await createContext({
            functions: {
                '<%=name%>': new Error('BOOM')
            }
        });
        try {
            await context.action('<%=name%>');
        }
        catch (err) {
            Assert.equal('BOOM', err.message);
        }
    });
});